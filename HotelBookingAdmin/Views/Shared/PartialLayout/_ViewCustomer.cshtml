
@{
  ViewBag.Title = "_ViewCustomer";
}

<div class="modal fade" id="modal-default" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Customer Information</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="post">
          <div class="form-group row">
            <label for="modal-email-text" class="col-sm-3 col-code-label">No.</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-code-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-email-text" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-email-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-name-text" class="col-sm-3 col-form-label">Fullname</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-name-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-gender-text" class="col-sm-3 col-form-label">Gender (Female/Male)</label>
            <div class="col-sm-1">
              <input type="checkbox" value="Female" disabled class="form-control" id="modal-gender-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-dob-text" class="col-sm-3 col-form-label">DOB</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="modal-dob-text" value="2000/1/12" disabled />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-address-text" class="col-sm-3 col-form-label">Address</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-address-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-phone-text" class="col-sm-3 col-form-label">Phone number</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-phone-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-password-text" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
              <input type="password" readonly class="form-control" id="modal-password-text" />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-success" data-dismiss="modal">Done</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>



