@using HotelBookingAdmin.Helpers
@using HotelBookingAdmin.Models
@{
  NhanVien nv = (NhanVien)Session["NhanVien"];
}

<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <a href="@Url.Action("Index", "Home")" class="brand-link">
    <img src="~/Assets/img/logo.png" alt="Tree Hotel Logo" class="img-fluid"
         style="opacity: .8; width: 150px;">
    <span class="brand-text font-weight-light"></span>
  </a>
  <div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="~/Assets/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <a href="@Url.Action("Profile", "Customer")" class="d-block status-name">@nv.TenNV</a>
      </div>
    </div>
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item ">
          <a href="@Url.Action("Index", "Home")" class="nav-link @Html.IsSelected("Home", "Index", "active")">
            <i class="nav-icon fas fa-home"></i>
            <p>
              Dashboard
            </p>
          </a>
        </li>
        <li class="nav-item ">
          <a href="@Url.Action("Privacy", "Home")" class="nav-link @Html.IsSelected("Home", "Privacy", "active")">
            <i class="nav-icon fas fa-lock"></i>
            <p>
              Privacy
            </p>
          </a>
        </li>
        <li class="nav-item ">
          <a href="@Url.Action("Employee", "Customer")" class="nav-link @Html.IsSelected("Customer", "Employee", "active")">
            <i class="nav-icon fas fa-users"></i>
            <p>
              Employee
            </p>
          </a>
        </li>
        <li class="nav-item ">
          <a href="@Url.Action("Customer", "Customer")" class="nav-link @Html.IsSelected("Customer", "Customer", "active")">
            <i class="nav-icon fas fa-user-lock"></i>
            <p>
              Customer
            </p>
          </a>
        </li>

        <li class="nav-item ">
          <a href="@Url.Action("Index", "Room")" class="nav-link @Html.IsSelected("Room", "Index", "active")">
            <i class="nav-icon fas fa-hotel"></i>
            <p>
              Room
            </p>
          </a>
        </li>
        <li class="nav-item ">
          <a href="@Url.Action("Index", "Order")" class="nav-link @Html.IsSelected("Order", "Index", "active")">
            <i class="nav-icon fas fa-money-check"></i>
            <p>
              Order
            </p>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</aside>