
@{
  ViewBag.Title = "_ViewRoom";
}

<div class="modal fade" id="modal-default" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Room Information</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">

        <img class="img-fluid" id="modal-img" src="https://media-cdn.tripadvisor.com/media/photo-s/13/d8/ea/1b/a-room-at-the-beach.jpg" />

        <form action="" method="post" class="mt-3">
          <div class="form-group row">
            <label for="modal-name-text" class="col-sm-3 col-form-label">Room name</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-name-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-status-text" class="col-sm-3 col-form-label">Status</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-status-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-type-text" class="col-sm-3 col-form-label">Room type</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-type-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-price-text" class="col-sm-3 col-form-label">Price($)</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-price-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-discount-text" class="col-sm-3 col-form-label">Discount($)</label>
            <div class="col-sm-9">
              <input type="text" readonly class="form-control" id="modal-discount-text" />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-success" data-dismiss="modal">Done</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>


