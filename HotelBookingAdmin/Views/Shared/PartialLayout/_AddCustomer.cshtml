
@{
  ViewBag.Title = "_AddEmployee";
}

<div class="modal fade" id="modal-add" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Customer Information</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="#" method="post" id="create-customer-form">
          <div class="form-group row">
            <label for="modal-add-email-text" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="modal-add-email-text" placeholder="Email" required />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-name-text" class="col-sm-3 col-form-label">Fullname</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="modal-add-name-text" placeholder="Fullname" required />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-gender-text" class="col-sm-3 col-form-label">Gender (Female/Male)</label>
            <div class="col-sm-1">
              <input type="checkbox" value="Female" class="form-control" id="modal-add-gender-text" />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-dob-text" class="col-sm-3 col-form-label">DOB</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="modal-add-dob-text" value="2000-1-12" min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" required />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-address-text" class="col-sm-3 col-form-label">Address</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="modal-add-address-text" placeholder="Address" required />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-phone-text" class="col-sm-3 col-form-label">Phone number</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="modal-add-phone-text" placeholder="Phone number" maxlength="10" required />
            </div>
          </div>

          <div class="form-group row">
            <label for="modal-add-password-text" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="modal-add-password-text" placeholder="Password" required />
            </div>
          </div>

          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-info" id="add-submit-btn">Submit</button>
          </div>
        </form>
      </div>
      
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>




